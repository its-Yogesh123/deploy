<body>
    <%- include('./partials/nav') %>
    <div class="mainContainer">
      <div class="regisContainer">
          <div class="regislogoContainer"></div>
          <span>Register Your Account</span>
          <form action="/signup" method="post">
              <input type="text" name="name" id="" placeholder="Full Name"> <br>
              <input type="email" name="email" id="" placeholder="Email"> <br>
              <input type="password" name="password" id="" placeholder="Password"> <br>
              <input type="password" name="Cpassword" id="" placeholder="Confirm Password"> <br>
              <br> <input type="submit" value="Register"> <br>
          </form>
      </div>
  </div>
