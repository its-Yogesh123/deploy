<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home Page</title>
</head>
<body>
    <%- include('./partials/nav') %>
    
    <div class="container mt-3">
        <div class="row row-cols-4">
       <% locals.blogs.forEach(blog => { %>
        <div class="col">
        <div class="card shadow p-3" style="width: 17rem;">
            <img src="<%- blog.coverImageURL %>" height="200px" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%- blog.title%></h5>
              <a href="/blog/<%- blog._id %>" class="btn btn-primary">Visit</a>
            </div>
          </div>
        </div>
       <% }) %>
    </div>
    </div>
    <%- include('./partials/scripts') %>
</body>
</html>